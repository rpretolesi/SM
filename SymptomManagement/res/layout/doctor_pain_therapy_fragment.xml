<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.capstone.sm.SettingActivity$PainTherapyFragment" >

    <TextView
        android:id="@+id/idTextViewChoosePatientPainTherapy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/labelTextViewChoosePatientPainTherapy" />
    
    <EditText
        android:id="@+id/idEditTextPainTherapyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/idTextViewChoosePatientPainTherapy" 
        android:layout_alignParentLeft="true"    
        android:layout_marginTop="34dp"
        android:hint="@string/labelEditTextPainTherapyName" 
        android:inputType="text" > 
        
        <requestFocus />
    </EditText>    
    
    <Button
        android:id="@+id/idButtonSetPainTherapyAddUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEditTextPainTherapyName"        
        android:layout_alignParentLeft="true"    
        android:layout_marginTop="34dp"
        android:text="@string/labelButtonSetPainTherapyAddUpdate" />
    
    <Button
        android:id="@+id/idButtonSetPainTherapyDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEditTextPainTherapyName"        
        android:layout_alignParentRight="true"    
        android:layout_marginTop="34dp"
        android:text="@string/labelButtonSetPainTherapyDelete" />
    
    <Button
        android:id="@+id/idButtonSetPainTherapyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idButtonSetPainTherapyAddUpdate"        
        android:layout_alignParentLeft="true"    
        android:layout_marginTop="34dp"
        android:text="@string/labelButtonSetPainTherapyList" />

</RelativeLayout>
